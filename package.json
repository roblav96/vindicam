{
	"name": "vindicam",
	"version": "0.0.1",
	"description": "Vindicate yourself with a live video recording saved to remote storage",
	"main": "main.js",
	"scripts": {
		"a": "ns run android --no-hmr",
		"au": "adb uninstall app.vindicam || true",
		"i": "ns run ios --no-hmr",
		"iu": "ideviceinstaller --uninstall app.vindicam || true",
		"xcode": "ns prepare ios && open platforms/ios/vindicam.xcworkspace",
		"del": "del hooks node_modules platforms",
		"delp": "del platforms",
		"livego": "run-p livego:*",
		"livego:livego": "livego --flv_dir livego/flv --level debug",
		"livego:curl": "delay 1 && curl 'http://127.0.0.1:8090/control/get?room=test'",
		"postinstall": "run-p postinstall:*",
		"postinstall:update-ns-webpack": "echo cpy node_modules/@nativescript/webpack/templates/webpack.typescript.js ."
	},
	"dependencies": {
		"@nativescript/core": "^7.0.10",
		"@nativescript/theme": "^3.0.0",
		"ansi-colors": "^4.1.1",
		"dayjs": "^1.9.1",
		"lodash-es": "^4.17.15",
		"rambda": "^6.2.0",
		"rambdax": "^6.2.0",
		"shimmer": "^1.2.1",
		"string-fn": "^2.12.2"
	},
	"devDependencies": {
		"@nativescript/android": "7.0.0",
		"@nativescript/ios": "7.0.1",
		"@nativescript/types": "^7.0.4",
		"@nativescript/webpack": "^3.0.5",
		"@types/lodash": "^4.14.161",
		"@types/shimmer": "^1.0.1",
		"cpy-cli": "^3.1.1",
		"del-cli": "^3.0.1",
		"delay-cli": "^1.1.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^4.0.3"
	},
	"author": "Robert Laverty <roblav96@gmail.com> (https://github.com/roblav96)",
	"bugs": "https://github.com/roblav96/vindicam/issues",
	"homepage": "https://github.com/roblav96/vindicam#readme",
	"license": "Unlicense",
	"repository": "github:roblav96/vindicam"
}
