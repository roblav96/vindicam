{
	"compilerOptions": {
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["esnext"],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmitHelpers": true,
		"paths": { "~/*": ["src/*"] },
		"skipLibCheck": true,
		"target": "es2017"
	},
	"include": [
		"node_modules/@nativescript/types-android/lib/android-29.d.ts",
		"node_modules/@nativescript/types-ios/lib/ios/ios.d.ts",
		"types/**/*.d.ts",
		"src/**/*.ts"
	],
	"exclude": ["App_Resources", "hooks", "platforms"]
}
