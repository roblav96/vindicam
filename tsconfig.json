{
	"compilerOptions": {
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"noEmitHelpers": true,
		"paths": { "~/*": ["src/*"] },
		"skipLibCheck": true,
		"target": "es5"
	},
	"include": [
		"node_modules/tns-platform-declarations/android-29.d.ts",
		"node_modules/tns-platform-declarations/ios.d.ts",
		"types/**/*.d.ts",
		"src/**/*.ts"
	],
	"exclude": ["App_Resources", "hooks", "platforms"]
}
