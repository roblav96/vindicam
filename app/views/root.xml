<Page
	id="root"
	navigatingTo="navigatingTo"
	navigatedTo="navigatedTo"
	xmlns:webrtc="nativescript-webrtc-plugin"
>
	<ActionBar title="Vindicam" />

	<StackLayout>
		<webrtc:WebRTCView id="remote" height="40%" />
		<webrtc:WebRTCView id="local" height="40%" />
		<Button text="Connect" tap="{{ tapConnect }}" class="-primary" height="10%" />
	</StackLayout>
</Page>
